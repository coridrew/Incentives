<UserControl
    x:Class="Incentives.Controls.ProfileBadgeSmall"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Incentives.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="58"
    d:DesignWidth="58">
    
    <Grid
        Width="58"
        Height="58">
        <Rectangle
            Fill="#FFF4F4F5"
            Stroke="Black" />
        <Ellipse
            Fill="{StaticResource PointIndicatorFillBrush}"
            Stroke="{StaticResource PointIndicatorStrokeBrush}"
            Width="30"
            Height="30"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="0,-4,-4,0"/>
        <TextBlock
            Text="312"
            Width="30"
            VerticalAlignment="Top"
            HorizontalAlignment="Right"
            TextAlignment="Center"
            Margin="0,5,-4,0"
            FontSize="11" Foreground="{StaticResource PointIndicatorForegroundBrush}" />
    </Grid>
</UserControl>
