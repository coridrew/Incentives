<UserControl
    x:Class="Incentives.Views.ActivityLineSmall"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Incentives.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="28.667"
    d:DesignWidth="400">
    
    <StackPanel
        Height="29"
        Orientation="Horizontal">
        <Grid
            Height="23"
            Width="23"
            Margin="3">
            <Ellipse
                Fill="#FFF4F4F5"
                Stroke="Black" />
            <TextBlock
                Text="+5"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Margin="0,0,0,0" />
        </Grid>
        <TextBlock
            Grid.Column="2"
            Grid.Row="1"
            Text="Did something awesome."
            Margin="3,3,3,0"
            FontSize="21.333" VerticalAlignment="Top" />
    </StackPanel>
</UserControl>
